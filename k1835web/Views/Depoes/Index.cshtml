@model IEnumerable<k1835web.Models.Depo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Depolar</h2>

<p>
    @Html.ActionLink("Depo Ekle", "Create", new { controller = "Depoes" }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kodu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kodu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ad)
        </td>
        <td>
            @Html.ActionLink("Stok İşlemleri", "Islem", new { controller = "Depoes", id = item.Id }, new { @class = "btn btn-success btn-sm" }) || 
            @Html.ActionLink("Düzenle", "Edit", new { controller = "Depoes", id = item.Id }, new { @class = "btn btn-default btn-sm" }) || 
            @Html.ActionLink("Sil", "Delete", new { controller = "Depoes", id = item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>


}

</table>
